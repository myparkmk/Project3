<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>LINKES</title>

    <!-- Bootstrap Core CSS -->
    <link href="/bootstrap-3.3.6-dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="/stylesheets/style.css" rel="stylesheet">
</head>

<body>

    <!-- Navigation -->
    <header>
        <nav>
            <div class="text-right">
              <%
              if(session.user==undefined)
              {
              %>
                <div class="btn-group" style="background-color:white-space">
                    <div col-md-3>
                        <span class="input-group-btn">
                          <button type="button" class="btn btn-default" onclick="location.href='/login';">로그인</button>
                          <button type="button" class="btn btn-default" onclick="location.href='/signup';">회원가입</button>
                          <button type="button" class="btn btn-default" onclick="location.href='/service';">고객센터</button>
                        </span>
                    </div>
                </div>
                <%
                }
                else{
                %>
                <div class="btn-group" style="background-color:white-space">
                    <div col-md-3>
                        <span class="input-group-btn">
                          <button type="button" class="btn btn-default" onclick="location.href='/mypage/order_list';">마이페이지</button>
                          <button type="button" class="btn btn-default" onclick="location.href='/login/logout';">로그아웃</button>
                          <button type="button" class="btn btn-default" onclick="location.href='/service';">고객센터</button>
                        </span>
                    </div>
                </div>

                <%
                }
                %>
            </div>
        </nav>
    </header>

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <a href='/'>
                    <img class="img-responsive center-block" src="/images/main_logo.jpg" alt="logo">
                </a>
                <br>
                <br>
                <br>
            </div>
        </div>

        <form id="Form" method="post">
            <td>
                <input type="hidden" name="tel" id="tel">
                <select name="select1" id="select">
                    <option value="name">공연이름</option>
                    <option value="place">장소</option>
                </select>
                <input type="text" name="select2" id="person_info2" size="20" maxLength="20">
                <input type="submit"  class="btn btn-success btn-md" id="btnsearch" name="search" value="검색">
            </td>
        </form>
    </div>
    <br>
    <br>
    <!-- Centered Tabs -->
    <ul class="nav nav-tabs nav-justified">
        <li>
            <a href="/list/연극" class="btn btn-secondary hoverbtn"> <img class="img-circle img-responsive img-center" src="/images/연극.jpg" width="100px" height="100px" alt="" id="pizza"></a>
        </li>
        <li>
            <a href="/list/뮤지컬" class="btn btn-secondary hoverbtn"><img class="img-circle img-responsive img-center" src="/images/뮤지컬.jpg" width="100px" height="100px" alt="" id="chicken"></a>
        </li>
        <li>
            <a href="/list/공연" class="btn btn-secondary hoverbtn"><img class="img-circle img-responsive img-center" src="/images/공연.jpg" width="100px" height="100px" alt="" id="japan"></a>
        </li>
        <li>
            <a href="/list/기타" class="btn btn-secondary hoverbtn"> <img class="img-circle img-responsive img-center" src="/images/기타.jpg" width="100px" height="100px" alt="" id="boon"></a>
        </li>
    </ul>
    <br><br>
    <script>
        $("a.hoverbtn").hover(function(){
            console.log($(this)[0].children[0].id);
            switch($(this)[0].children[0].id){
                case "pizza": $(this)[0].children[0].src = "/images/연극.jpg";
                    break;
                case "chicken": $(this)[0].children[0].src = "/images/뮤지컬.jpg";
                    break;
                case "japan": $(this)[0].children[0].src = "/images/공연.jpg";
                    break;
                case "boon": $(this)[0].children[0].src = "/images/기타.jpg";
                    break;
            }
        }, function(){
            switch($(this)[0].children[0].id){
                case "pizza": $(this)[0].children[0].src = "/images/연극.jpg";
                    break;
                case "chicken": $(this)[0].children[0].src = "/images/뮤지컬.jpg";
                    break;
                case "japan": $(this)[0].children[0].src = "/images/공연.jpg";
                    break;
                case "boon": $(this)[0].children[0].src = "/images/기타.jpg";
                    break;
            }
        });
    </script>

    <div class=container>
        <div class="row">
      <%
      for(var i=0; i<rows.length;i++)
      {
        var oneItem = rows[i];
      %>
                <div class="col-xs-4">
                    <div class="thumbnail">
                        <a>
                        <img src="<%=oneItem.show_img%>" alt="공연대표사진" width="300" height="400">
                        </a>
                        <div class="caption">
                            <h4><%=oneItem.show_name%></h4>

                            <p>
                                장소 : <%=oneItem.show_place%>
                            </p>
                            <p>

                                <%
                                if(session.user!=undefined)
                                {
                                %>
                                <a href="/detail/<%=oneItem.show_name%>" class="btn btn-info" role="button">예매하기</a>
                                <%
                                }
                                %>
                            </p>
                        </div>
                    </div>
                </div>
      <%
      }
      %>
        </div>
    </div>
    <hr>

    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p>Software Engineering Project </p>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </footer>


    <!-- jQuery -->
    <script src="/bootstrap-3.3.6-dist/js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="/bootstrap-3.3.6-dist/js/bootstrap.min.js"></script>
    </div>
</body>

</html>
